extends layout

block content
    .container
        .jumbotron.p-4
            h1.display-5 Have any questions?
            p.lead
                | You can reach us by filling the form on the left, or on Facebook

        .row
            .col
                .card
                    h4.card-header Shoot us a message
                    .card-block
                        form(action='/contact' method='post')
                            .row
                                .col
                                    .form-group
                                        label(for='name')
                                            | Name
                                        input#name.form-control(type='text', placeholder='Enter name', required='required')
                                    .form-group
                                        label(for='email')
                                            | Email Address
                                        .input-group
                                            span.input-group-addon
                                                span.fa.fa-envelope
                                            input#email.form-control(type='email', placeholder='Enter email', required='required')
                                    .form-group
                                        label(for='subject')
                                            | Subject
                                        select#subject.form-control(name='subject', required='required')
                                            option(value='na', selected='') Choose One:
                                            option(value='service') General Customer Service
                                            option(value='suggestions') Suggestions
                                            option(value='product') Product Support
                                    .form-group
                                        label(for='name')
                                            | Message
                                        textarea#message.form-control(name='message', rows='9', cols='25', required='required', placeholder='Message')

                                    button#btnContactUs.btn.btn-primary.pull-left(type='submit')
                                        | Send Message
            .col
                .card
                    h4.card-header Reach us on social media
                    .card-block
                        .text-center
                            a(href="#")
                                i.fa.fa-facebook-square.fa-4x.m-3
                            br
                            a(href="#")
                                i.fa.fa-instagram.fa-4x.m-3
        hr.featurette-divider